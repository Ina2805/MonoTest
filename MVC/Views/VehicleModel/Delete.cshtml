@model Service.Models.VehicleModel

<h2>Delete Vehicle Make</h2>

<div>
    
    <h4>Are you sure you want to delete this vehicle model?</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dd class="col-sm-2">
            Vehicle Make Name
        </dd>
        <dd class="col-sm-10">
            @Model.VehicleMake.Name
        </dd>
        <dd class="col-sm-2">
            Vehicle Make Abbreviation
        </dd>
        <dd class="col-sm-10">
            @Model.VehicleMake.Abrv
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>