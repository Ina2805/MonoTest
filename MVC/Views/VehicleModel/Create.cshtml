@model Service.Models.VehicleModel

<h2>Create Vehicle Model</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" id="Name" name="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @{
        var vehicleMakes = ViewBag.VehicleMakes;
    }
    <div class="form-group">
        <select class="form-select" asp-for="VehicleMakeId" id="VehidleMakeId" aria-label="VehicleMake">
            <option selected>Open this select menu</option>
            @if (vehicleMakes != null)
            {
                @foreach (Service.Models.VehicleMake vehicleMake in vehicleMakes)
                {
                    <option value="@vehicleMake.Id">@vehicleMake.Name</option>
                }
            }
            else
            {
                <option value="0">No Vehicle Makes</option>
            }
        </select>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>